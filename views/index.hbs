<section class="vh-100"   >

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12 text-black">

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form  action="/login" method="post" style="width: 23rem;">

<h1 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">MarketPlaceX</h1>


            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Welcome Back</h3>

            <div class="form-outline mb-4">
              <input type="email" id="form2Example18" class="form-control form-control-lg" placeholder="Email ID"name="email" required/>
              {{!-- <label class="form-label" for="form2Example18" >Email address</label> --}}
            </div>

            <div class="form-outline mb-4">
              <input type="password" id="form2Example28" class="form-control form-control-lg" placeholder="Password" name="password"required />
              {{!-- <label class="form-label" for="form2Example28">Password</label> --}}
            </div>

            <div class="pt-1 mb-4">
              <button class="btn btn-info btn-lg btn-block" style="color: white;background-color: grey;
              border-color: white;" type="submit">Sign in</button>
              {{#if login}}
                  <div class="alert text-center mb-3" style="color: red;">{{login}}
                {{/if}}
                </div>
                 {{#if nullcheck}}
                  <div class="alert alert-danger text-center mb-3">{{nullcheck}}
                {{/if}}
            </div>

          </form>

        </div>

      </div>
      
    </div>
  </div>
</section>
